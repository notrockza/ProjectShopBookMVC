<table id="ordertabel" class="table table-striped table-bordered" style="width:100% ">
    <tr>
        <th>
            ชื่อ
        </th>
        <th>
            รห้สผ่าน
        </th>
        <th>
            ชื่อเล่น
        </th>
        <th>
            ที่อยู่
        </th>
        <th>
            เบอร์โทร
        </th>
        <th>
            อีเมล์
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Email)
            </td>
        </tr>
    }

</table>
